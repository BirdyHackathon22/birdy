{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
        "hostingPlanName": {
            "type": "string",
            "metadata": {
                "description": "Name of Azure functions Hosting Plan"
            }
        },
        "storageAccountNameFunction": {
            "type": "string",
            "metadata": {
                "description": "Name of Storage account for functions"
            }
        },
        "storageAccountNameUpload": {
            "type": "string",
            "metadata": {
                "description": "Name of Storage account for Images Upload from devices"
            }
        },
        "appInsightsServiceName": {
            "type": "string",
            "metadata": {
                "description": "Name of the App Insight"
            }
        },
        "cognitiveVisionServiceName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Computer Vision Service"
            }
        },
        "functionNameDispatcher": {
            "type": "string",
            "metadata": {
                "description": "Name of the Function - Dispatcher"
            }
        },
        "functionNameClassifier": {
            "type": "string",
            "metadata": {
                "description": "Name of the function - Classifier"
            }
        },
        "tagValues": {
            "type": "Object",
            "metadata": {
                "description": "Tags for all resources"
            }
        },
        "iotHubName": {
            "type": "string",
            "metadata": {
                "description": "Name of the IoT Hub"
            }
        },
        "vaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Ky Vault for Secrets"
            }
        }
    },
    "functions": [],
    "variables": {
        "cogServCompVisionId": "[concat(resourceGroup().id,'/providers/','Microsoft.CognitiveServices/accounts/', parameters('cognitiveVisionServiceName'))]",
        "iotHubKeyName": "service"
    },
    "resources": [
        {   // Resource: Storage account for Image Upload
            "name": "[parameters('storageAccountNameUpload')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "kind": "StorageV2",
            "tags": "[parameters('tagValues')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2019-06-01",
                    "name": "default/images",
                    "dependsOn": [
                         "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameUpload'))]"
                    ]
                }
            ]
        },
        {   // Resource: Storage account for Azure Function
            "name": "[parameters('storageAccountNameFunction')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "kind": "StorageV2",
            "tags": "[parameters('tagValues')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "accessTier": "Hot"
            }
        },
        {   // Resource: Hosting Plan for Function App
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameFunction'))]"
            ],
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSize": "0",
                "workerSizeId": "0",
                "numberOfWorkers": "1",
                "reserved": true
            },
            "sku": {
                "tier": "Dynamic",
                "name": "Y1"
            }
        },
        {   // Resource: Application Insight for Function App
            "name": "[parameters('appInsightsServiceName')]",
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02-preview",
            "location": "[resourceGroup().location]",
            "kind": "other",
            "tags": "[parameters('tagValues')]",
            "properties": {
                "ApplicationId": "[parameters('appInsightsServiceName')]",
                "Application_Type": "other"
            }
        },
        {   // Resource: Function App (Dispatcher)
            "name": "[parameters('functionNameDispatcher')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "kind": "functionapp,linux",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "[resourceId('Microsoft.insights/components', parameters('appInsightsServiceName'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('cognitiveVisionServiceName'))]",
                "[resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName'))]"
            ],
            "properties": {
                "name": "[parameters('functionNameDispatcher')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountNameFunction'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameFunction')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightsServiceName')), '2020-02-02-preview').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightsServiceName')), '2020-02-02-preview').ConnectionString]"
                        },
                        {
                            "name": "IotHubConnectionString",
                            "value": "[concat('HostName=', reference(resourceId('Microsoft.Devices/Iothubs', parameters('iotHubName'))).hostName, ';SharedAccessKeyName=', variables('iotHubKeyName'), ';SharedAccessKey=', listkeys(resourceId('Microsoft.Devices/Iothubs/Iothubkeys', parameters('iotHubName'), variables('iotHubKeyName')), '2020-03-01').primaryKey)]"
                        },
                        {
                            "name": "ComputerVisionEndpoint",
                            "value": "[reference(variables('cogServCompVisionId'),'2017-04-18').endpoint]"
                        },
                        {
                            "name": "ComputerVisionKey",
                            "value": "[listKeys(variables('cogServCompVisionId'),'2017-04-18').key1]"
                        }
                    ],
                    "linuxFxVersion": "Python|3.9",
                    "use32BitWorkerProcess": false
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "clientAffinityEnabled": false
            }
        },
        {   // Resource: Function App (Classifier)
            "name": "[parameters('functionNameClassifier')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "kind": "functionapp,linux",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "[resourceId('Microsoft.insights/components', parameters('appInsightsServiceName'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('cognitiveVisionServiceName'))]",
                "[resourceId('Microsoft.Devices/IotHubs', parameters('iotHubName'))]"
            ],
            "properties": {
                "name": "[parameters('functionNameClassifier')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountNameFunction'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameFunction')), '2019-06-01').keys[0].value,';EndpointSuffix=','core.windows.net')]"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightsServiceName')), '2020-02-02-preview').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightsServiceName')), '2020-02-02-preview').ConnectionString]"
                        },
                        {
                            "name": "ComputerVisionEndpoint",
                            "value": "[reference(variables('cogServCompVisionId'),'2017-04-18').endpoint]"
                        },
                        {
                            "name": "ComputerVisionKey",
                            "value": "[listKeys(variables('cogServCompVisionId'),'2017-04-18').key1]"
                        }
                    ],
                    "linuxFxVersion": "Python|3.9",
                    "use32BitWorkerProcess": false
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
                "clientAffinityEnabled": false
            }
        },
        {   // Resource: Cognitive Service
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[parameters('cognitiveVisionServiceName')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "sku": {
                "name": "S1"
            },
            "kind": "ComputerVision",
            "properties": {
                "statisticsEnabled": false,
                "customSubDomainName": "[parameters('cognitiveVisionServiceName')]",
                "networkAcls": {
                    "defaultAction": "Allow",
                    "virtualNetworkRules": [],
                    "ipRules": []
                },
                "privateEndpointConnections": [],
                "publicNetworkAccess": "Enabled"
            }
        },
        {   // Resource: IoT Hub
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2020-08-01",
            "name": "[parameters('IoTHubName')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameUpload'))]"
            ],
            "sku": {
                "name": "S1",
                "capacity": 1
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 2
                    }
                },
                "storageEndpoints": {
                    "$default": {
                        "sasTtlAsIso8601": "PT1H",
                        "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountNameUpload'),';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameUpload')),'2019-06-01').keys[0].value)]",
                        "containerName": "images"
                    }
                },
                "enableFileUploadNotifications": true,
                "cloudToDevice": {
                    "maxDeliveryCount": 10,
                    "defaultTtlAsIso8601": "PT1H",
                    "feedback": {
                        "lockDurationAsIso8601": "PT1M",
                        "ttlAsIso8601": "PT1H",
                        "maxDeliveryCount": 10
                    }
                },
                "features": "None"
            }
        },
        {   // Resource: Key Vault
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2019-09-01",
            "name": "[parameters('vaultName')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tagValues')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameUpload'))]",
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('cognitiveVisionServiceName'))]"
            ],
            "properties": {
                "enableRbacAuthorization": false,
                "enableSoftDelete": false,
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": false,
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [],
                "sku": {
                    "name": "Standard",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            },
            "resources": [
                {
                    "type": "secrets",
                    "name": "ComputerVisionKey",
                    "apiVersion": "2019-09-01",
                    "properties": {
                        "value": "[listKeys(variables('cogServCompVisionId'),'2017-04-18').key1]"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.KeyVault/vaults/', parameters('vaultName'))]"
                    ]
                },
                {
                    "type": "secrets",
                    "name": "StorageUploadKey",
                    "apiVersion": "2019-09-01",
                    "properties": {
                        "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameUpload')),'2019-06-01').keys[0].value]"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.KeyVault/vaults/', parameters('vaultName'))]"
                    ]
                }
            ]
        }
    ],
    "outputs": {}
}